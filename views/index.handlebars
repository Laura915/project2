{{!-- Main Content --}}
<div class="container-fluid" id="center-all-content">
    {{!-- Home, Jumbotron --}}
    <section class="row">
        <div class="jumbotron  center-align" id="welcome-sign">

            <h4>Welcome to Training Zone!</h4>
            <p class="lead">
                To begin keeping track of your fitness progress, select a workout from the drop-down menu below and
                enter your personal workout information.
            </p>
        </div>
    </section>

    {{!-- Workouts Section --}}
    <section id="work-out-sec">
        {{!-- Workouts Title --}}
        <h3>Weekly Workouts</h3>


        <div>
            {{!-- Cards --}}
            {{#each days}}
            <div>
                <div class="row" class="card-body" id={{this}}>
                    <div class="card" id="cardMarg">
                        <div>
                            {{!-- {{#each exercises}} --}}
                            {{!-- <p> {{exercises}} /yellow</p> --}}
                            {{!-- {{/each}} --}}
                            <p>{{dataValues.category}}</p>
                            <p>{{dataValues.name}}</p>
                            <p id="instruction">Please Choose Your Exercise</p>
                            <ul>
                                {{!-- <p>{{dataValues.category}}</p>
                <p>{{dataValues.name}}</p> --}}
                            </ul>
                        </div>
                        <select class="dropdown-menu">
                            <!-- Dropdown menu links -->
                            <option value=" " disabled selected>Focus On</option>
                            <option value="arms">Arms</option>
                            <option value="back">Back</option>
                            <option value="chest">Chest</option>
                            <option value="legs">Legs</option>
                            <option value="cardio">Cardio</option>
                            <option value="abs">Abs</option>
                    </div>
                    <input name="exerciseName" type="name" class="form-control" id="inputName"
                        placeholder="Your Exercise">
                    <i data-id="{{id}}" data-exercise="true" class="fas fa-heartbeat"></i>
                    <p class="message"></p>
                </div>
            </div>
            {{/each}}
        </div>
    </section>
</div>